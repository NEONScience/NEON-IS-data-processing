{
  "pipeline": {
    "name": "tempAirSingle_threshold_select"
  },
  "transform": {
    "cmd": ["Rscript","/flow.thsh.slct.R","DirIn=$REPO_LOCATIONS","DirOut=/pfs/out","FileThsh=$FILE_THRESHOLDS","TermCtxt1=temp|aspirated-single","DirSubCopy=location"],
    "image": "quay.io/battelleecology/neon-is-thsh-slct-r:v0.0.6",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "DEBUG"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "REPO_LOCATIONS",
          "repo": "tempAirSingle_locations",
          "glob": "/prt/*/*/*/"
        }
      },
      {
        "pfs": {
          "name": "FILE_THRESHOLDS",
          "repo": "tempAirSingle_threshold_filter",
          "glob": "/thresholds.json"
        }
      }
    ]
  },
  "enable_stats": true,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

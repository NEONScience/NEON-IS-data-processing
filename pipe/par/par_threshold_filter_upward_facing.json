{
  "pipeline": {
    "name": "par_threshold_filter_upward_facing"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.thsh.filt.R",
      "DirIn=$threshold",
      "DirOut=/pfs/out",
      "Term=par",
      "Ctxt=par-met|upward-facing"
      ],
    "image": "quay.io/battelleecology/neon-is-thsh-filt-r:v0.0.7",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "pfs": {
      "repo": "threshold",
      "glob": "/"
    }
  },
  "enable_stats": false,
  "standby": true,
  "resource_requests": {
    "memory": "13M",
    "cpu": 0.01
  }
}

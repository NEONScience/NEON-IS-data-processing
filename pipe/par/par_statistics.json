{
  "pipeline": {
    "name": "par_statistics"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "./flow.stat.basc.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "DirErr=/pfs/out/errored_datums",
      "FileSchmStat=$FILE_SCHEMA_STATS",
      "WndwAgr=001|030",
      "TermStat1=par:mean|minimum|maximum|variance|numPts|stdEr|expUncert(wrap.ucrt.dp01.cal.mult.fdas.volt)"
    ],
    "image": "us-central1-docker.pkg.dev/neon-shared-service/neonscience/neon-is-stat-basc:sha-6d57cca",
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "par_pre_statistics_group",
          "glob": "/*/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_SCHEMA_STATS",
          "repo": "avro_schemas_par",
          "glob": "/par/par_dp01_stats.avsc"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "1"
  },
  "resource_requests": {
    "memory": "200Mi"
  }
}

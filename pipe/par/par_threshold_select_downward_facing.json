{
  "pipeline": {
    "name": "par_threshold_select_downward_facing"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "./flow.thsh.slct.R",
      "DirIn=$REPO_LOCATIONS",
      "DirOut=/pfs/out",
      "DirErr=/pfs/out/errored_datums",
      "FileThsh=$FILE_THRESHOLDS",
      "TermCtxt1=par|par-met|downward-facing",
      "DirSubCopy=location"
    ],
    "image": "us-central1-docker.pkg.dev/neon-shared-service/neonscience/neon-is-thsh-slct:sha-3bcd5ff",
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "REPO_LOCATIONS",
          "repo": "par_locations_downward_facing",
          "glob": "/*/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_THRESHOLDS",
          "repo": "par_threshold_filter_downward_facing",
          "glob": "/thresholds.json"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "resource_requests": {
    "memory": "12M",
    "cpu": 0.05
  }
}

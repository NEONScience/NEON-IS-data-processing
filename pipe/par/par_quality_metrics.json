{
  "pipeline": {
    "name": "par_quality_metrics"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "./flow.qaqc.qm.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "DirErr=/pfs/out/errored_datums",
      "FileSchmQm=$FILE_SCHEMA_QM",
      "WndwAgr=001|030",
      "WghtAlphBeta=2|1",
      "Thsh=0.2",
      "GrpQfAlph1=PAR:suspectCalQF|nullQF|gapQF|rangeQF|stepQF|persistenceQF",
      "GrpQfBeta1=PAR:nullQF|gapQF|rangeQF|stepQF|persistenceQF",
      "GrpQfBetaIgnr1=PAR:nullQF|gapQF"
    ],
    "image": "us-central1-docker.pkg.dev/neon-shared-service/neonscience/neon-is-qaqc-qm:v1.1.0",
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "par_qaqc_flags_group",
          "glob": "/*/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_SCHEMA_QM",
          "repo": "avro_schemas_par",
          "glob": "/par/par_dp01_quality_metrics.avsc"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "1"
  },
  "resource_requests": {
    "memory": "200Mi"
  }
}

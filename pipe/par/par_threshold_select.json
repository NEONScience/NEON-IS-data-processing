{
  "pipeline": {
    "name": "par_threshold_select"
  },
  "transform": {
    "cmd": ["Rscript","/flow.thsh.slct.R","DirIn=$REPO_LOCATIONS","DirOut=/pfs/out","FileThsh=$FILE_THRESHOLDS","TermCtxt1=inPAR|outPAR|par-met","DirSubCopy=location"],
    "image": "quay.io/battelleecology/neon-is-thsh-slct-r:v0.0.13",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "REPO_LOCATIONS",
          "repo": "par_locations",
          "glob": "/*/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_THRESHOLDS",
          "repo": "par_threshold_filter",
          "glob": "/thresholds.json"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "resource_requests": {
    "memory": "12M",
    "cpu": 0.05
  }
}

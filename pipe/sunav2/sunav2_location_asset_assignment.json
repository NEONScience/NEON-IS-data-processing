{
  "pipeline": {
    "name": "sunav2_location_asset_assignment"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "./flow.loc.grp.asgn.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "DirErr=/pfs/out/errored_datums",
      "FileYear=$FILE_YEAR",
      "TypeFile=asset"
    ],
    "image": "us-central1-docker.pkg.dev/neon-shared-service/neonscience/neon-is-loc-grp-asgn:v1.1.1",
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "location_asset",
          "glob": "/sunav2/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_YEAR",
          "repo": "data_source_sunav2_list_years",
          "glob": "/data_year*.txt"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "resource_requests": {
    "memory": "210M",
    "cpu": 0.3
  },
  "parallelism_spec": {
    "constant": "8"
  }
}

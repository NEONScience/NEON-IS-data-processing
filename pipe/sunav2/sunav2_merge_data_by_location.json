{
  "pipeline": {
    "name": "sunav2_merge_data_by_location"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "./flow.loc.data.trnc.comb.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "DirErr=/pfs/out/errored_datums",
      "DirSubCombData=data",
      "DirSubCopy=location|calibration"
    ],
    "image": "quay.io/battelleecology/neon-is-loc-data-trnc-comb-r:v1.0.0",
    "image_pull_secrets": [
      "battelleecology-quay-read-all-pull-secret"
    ],
    "env": {
      "LOG_LEVEL": "INFO",
      "PARALLELIZATION_INTERNAL": "1"
    }
  },
  "input": {
    "pfs": {
      "name": "DIR_IN",
      "repo": "sunav2_structure_repo_by_location",
      "glob": "/sunav2/*/*/*"
    }
  },
  "enable_stats": false,
  "standby": false,
  "resource_requests": {
    "memory": "80M",
    "cpu": 0.3
  }
}

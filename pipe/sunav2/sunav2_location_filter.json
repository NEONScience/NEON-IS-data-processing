{
  "pipeline": {
    "name": "sunav2_location_filter"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.loc.filt.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "DirSubCopy=data|calibration"
    ],
    "image": "quay.io/battelleecology/neon-is-loc-filt-r:v0.0.16",
    "image_pull_secrets": [
      "battelleecology-quay-read-all-pull-secret"
    ],
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "pfs": {
      "name": "DIR_IN",
      "repo": "sunav2_data_location_group",
      "glob": "/sunav2/*/*"
    }
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}
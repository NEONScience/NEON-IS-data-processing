{
  "pipeline": {
    "name": "prt_calibration_conversion"
  },
  "transform": {
    "cmd": ["Rscript","/flow.cal.conv.R","DirIn=$DIR_IN","DirOut=/pfs/out","FileSchmData=$FILE_SCHEMA_DATA","FileSchmQf=$FILE_SCHEMA_FLAGS","TermConv=resistance","TermUcrt=resistance(R)","FileUcrtFdas=$FILE_UNCERTAINTY_FDAS"],
    "image": "quay.io/battelleecology/neon-is-cal-conv-r:v0.0.17",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "prt_calibration_filter",
          "glob": "/prt/*/*/*/"
        }
      },
      {
        "cross": [
        {
          "pfs": {
            "name": "FILE_SCHEMA_DATA",
            "repo": "avro_schemas",
            "glob": "/dp0p/prt_calibrated.avsc"
          }
        },
        {
          "cross": [
          {
              "pfs": {
              "name": "FILE_SCHEMA_FLAGS",
              "repo": "avro_schemas",
              "glob": "/dp0p/flags_calibration.avsc"
            }
          },
          {
              "pfs": {
              "name": "FILE_UNCERTAINTY_FDAS",
              "repo": "uncertainty_fdas",
              "glob": "/fdas_calibration_uncertainty_general.json"
            }
          }
          ]
        }
        ]
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

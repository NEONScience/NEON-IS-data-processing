{
  "pipeline": {
    "name": "waterQuality_exophorp_threshold_regularized_group"
  },
  "transform": {
    "image_pull_secrets": [ "battelleecology-quay-read-all-pull-secret" ],
    "image": "quay.io/battelleecology/joiner:2",
    "cmd": [ "/bin/bash" ],
    "stdin": [ "#!/bin/bash", "python3 -m joiner.app" ],
    "env": {
      "RELATED_PATHS": "REGULARIZED_PATH,THRESHOLD_PATH",
      "LOG_LEVEL": "INFO",
      "OUT_PATH": "/pfs/out",
      "RELATIVE_PATH_INDEX": "3"
    }
  },
  "input": {
    "join": [
      {
        "pfs": {
          "name": "REGULARIZED_PATH",
          "repo": "waterQuality_exophorp_data",
          "glob": "/*/*/(*)",
          "joinOn": "$1",
          "empty_files": true
        } 
      },
      {
        "pfs": {
          "name": "THRESHOLD_PATH",
          "repo": "waterQuality_exophorp_threshold_select",
          "glob": "/*/*/(*)",
          "joinOn": "$1",
          "empty_files": true
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true
}

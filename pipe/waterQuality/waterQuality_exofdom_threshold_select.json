{
  "pipeline": {
    "name": "waterQuality_exofdom_threshold_select"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "./flow.thsh.slct.R",
      "DirIn=$REPO_LOCATIONS",
      "DirOut=/pfs/out",
      "DirErr=/pfs/out/errored_datums",
      "FileThsh=$FILE_THRESHOLDS",
      "TermCtxt1=fDOM|water-quality",
      "DirSubCopy=location"
    ],
    "image": "us-central1-docker.pkg.dev/neon-shared-service/neonscience/neon-is-thsh-slct:v1.1.0",
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "REPO_LOCATIONS",
          "repo": "waterQuality_exofdom_location",
          "glob": "/*/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_THRESHOLDS",
          "repo": "waterQuality_exofdom_threshold_filter",
          "glob": "/thresholds.json"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

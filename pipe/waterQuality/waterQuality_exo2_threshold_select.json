{
  "pipeline": {
    "name": "waterQuality_exo2_threshold_select"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.thsh.slct.R",
      "DirIn=$REPO_LOCATIONS",
      "DirOut=/pfs/out",
      "FileThsh=$FILE_THRESHOLDS",
      "TermCtxt1=sensorDepth|water-quality",
      "DirSubCopy=location"
    ],
    "image": "quay.io/battelleecology/neon-is-thsh-slct-r:v0.0.14",
    "image_pull_secrets": [
      "battelleecology-quay-read-all-pull-secret"
    ],
    "env": {
      "LOG_LEVEL": "DEBUG"
    }
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "REPO_LOCATIONS",
          "repo": "waterQuality_exo2_location",
          "glob": "/*/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_THRESHOLDS",
          "repo": "waterQuality_exo2_threshold_filter",
          "glob": "/thresholds.json"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}
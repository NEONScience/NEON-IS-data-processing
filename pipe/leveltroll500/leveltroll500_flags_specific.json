{
  "pipeline": {
    "name": "leveltroll500_flags_specific"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.troll.flags.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileSchmQf=$SCHEMA_FLAGS"
      ],
    "image": "quay.io/battelleecology/neon-is-troll-flags-r:v0.0.2",
    "image_pull_secrets": [ "battelleecology-quay-read-all-pull-secret" ],
    "env": {
      "LOG_LEVEL": "DEBUG"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "leveltroll500_calibration_conversion",
          "glob": "/leveltroll500/*/*/*/"
        }
      },
      {
        "pfs": {
            "name": "SCHEMA_FLAGS",
            "repo": "avro_schemas",
            "glob": "/dp0p/flags_troll_specific.avsc"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

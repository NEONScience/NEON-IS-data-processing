{
  "pipeline": {
    "name": "leveltroll500_calibration_conversion"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.cal.conv.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileSchmData=$FILE_SCHEMA_DATA",
      "FileSchmQf=$FILE_SCHEMA_FLAGS",
      "TermFuncConv=pressure:def.cal.conv.poly.b|temperature:def.cal.conv.poly",
      "TermQf=pressure|temperature",
      "TermFuncUcrt=pressure:def.ucrt.meas.cnst|temperature:def.ucrt.meas.cnst"
      ],
    "image": "quay.io/battelleecology/neon-is-cal-conv-r:v0.0.46",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "DEBUG"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "leveltroll500_data_calibration_group",
          "glob": "/leveltroll500/*/*/*/"
        }
      },
      {
        "pfs": {
          "name": "FILE_SCHEMA_DATA",
          "repo": "avro_schemas",
          "glob": "/dp0p/leveltroll500_calibrated.avsc"
        }
      },
      {
        "pfs": {
          "name": "FILE_SCHEMA_FLAGS",
          "repo": "avro_schemas",
          "glob": "/dp0p/flags_calibration_leveltroll500.avsc"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "resource_requests": {
    "memory": "250M",
    "cpu": 0.25
  }
}

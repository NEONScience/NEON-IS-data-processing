{
  "pipeline": {
    "name": "prt_soil_threshold_filter"
  },
  "transform": {
    "cmd": ["Rscript","/flow.thsh.filt.R","DirIn=$threshold","DirOut=/pfs/out","Term=temp","Ctxt=soil"],
    "image": "quay.io/battelleecology/neon-is-thsh-filt-r:v0.0.2",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "DEBUG"
    }  
  },
  "input": {
    "pfs": {
      "repo": "threshold",
      "glob": "/"
    }
  },
  "enable_stats": true,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

{
  "pipeline": {
    "name": "dualfan_location_filter"
  },
  "transform": {
    "cmd": ["Rscript","/flow.loc.filt.R","DirIn=$DIR_IN","DirOut=/pfs/out","DirSubCopy=data"],
    "image": "quay.io/battelleecology/neon-is-loc-filt-r:v0.0.3",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "DEBUG"
    }  
  },
  "input": {
    "pfs": {
      "name": "DIR_IN",
      "repo": "dualfan_data_location_group",
      "glob": "/dualfan/*/*/*/"
      }
  },
  "enable_stats": true,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

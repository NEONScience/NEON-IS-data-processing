{
  "pipeline": {
    "name": "aquatroll200_flags_specific"
  },
  "transform": {
    "cmd": ["Rscript","/flow.troll.flags.R","DirIn=$DIR_IN","DirOut=/pfs/out","FileSchmQf=$SCHEMA_FLAGS"],
    "image": "quay.io/ncatolico/neon-is-troll-flags-r:v0.0.2",
    "env": {
      "LOG_LEVEL": "DEBUG"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "aquatroll200_calibration_conversion",
          "glob": "/aquatroll200/*/*/*/"
        }
      },
      {
        "pfs": {
            "name": "SCHEMA_FLAGS",
            "repo": "avro_schemas",
            "glob": "/dp0p/flags_troll_specific.avsc"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

{
  "pipeline": {
    "name": "aquatroll200_flags_specific"
  },
  "transform": {
    "cmd": ["Rscript","/flow.troll.flags.R","DirIn=$DIR_IN","DirOut=/pfs/out","SensTermPressure=pressure","SensTermTemp=temperature","SensTermCond=conductivity","FileSchmQf=$SCHEMA_FLAGS"],
    "image": "quay.io/battelleecology/neon-is-qaqc-troll-r:v0.0.1",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "aquatroll200_calibration_conversion",
          "glob": "/*/*/*/"
        }
      },
      {
        "pfs": {
            "name": "SCHEMA_FLAGS",
            "repo": "avro_schemas",
            "glob": "/dp0p/flags_troll_specific.avsc"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

{
  "pipeline": {
    "name": "surfacewaterPhysical_threshold_select"
  },
  "transform": {
    "cmd": ["Rscript",
    "/flow.thsh.slct.R",
    "DirIn=$REPO_LOCATIONS",
    "DirOut=/pfs/out",
    "DirErr=/pfs/out/errored_datums",
    "FileThsh=$FILE_THRESHOLDS",
    "TermCtxt1=pressure|surfacewater",
    "TermCtxt2=temperature|surfacewater",
    "TermCtxt3=conductivity|surfacewater",
    "DirSubCopy=location"
    ],
    "image": "quay.io/battelleecology/neon-is-thsh-slct-r:v0.0.15",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "REPO_LOCATIONS",
          "repo": "surfacewaterPhysical_locations",
          "glob": "/*/*/*/*/"
        }
      },
      {
        "pfs": {
          "name": "FILE_THRESHOLDS",
          "repo": "surfacewaterPhysical_threshold_filter",
          "glob": "/thresholds.json"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "1"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}
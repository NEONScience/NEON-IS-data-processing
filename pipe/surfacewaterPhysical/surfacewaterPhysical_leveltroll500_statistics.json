{
  "pipeline": {
    "name": "surfacewaterPhysical_leveltroll500_statistics"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.stat.basc.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileSchmStat=NA",
      "DirSubCopy=data|uncertainty_data",
      "WndwAgr=005|030",
      "TermStat1=pressure:mean|minimum|maximum|variance|numPts|stdEr",
      "TermStat2=temperature:mean|minimum|maximum|variance|numPts|stdEr",
      "TermStat3=elevation:mean|minimum|maximum|variance|numPts|stdEr"
      ],
    "image": "quay.io/battelleecology/neon-is-stat-basc-r:v0.0.14",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "swPhysical_ucrt_leveltroll500_specific",
          "glob": "/*/*/*"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

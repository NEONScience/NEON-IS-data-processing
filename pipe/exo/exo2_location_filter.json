{
  "pipeline": {
    "name": "exo2_location_filter"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.loc.filt.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "DirSubCopy=data|flags|uncertainty_coef|uncertainty_data"
      ],
    "image": "quay.io/battelleecology/neon-is-loc-filt-r:v0.0.13",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "pfs": {
      "name": "DIR_IN",
      "repo": "exo2_calibrated_location_group",
      "glob": "/exo2/*/*"
      }
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

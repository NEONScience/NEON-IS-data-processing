{
  "pipeline": {
    "name": "exofdom_location_active_dates_assignment"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "./flow.loc.grp.asgn.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "DirErr=/pfs/out/errored_datums",
      "FileYear=$FILE_YEAR",
      "TypeFile=namedLocation"
    ],
    "image": "quay.io/battelleecology/neon-is-loc-grp-asgn-r:v1.0.3",
    "image_pull_secrets": [
      "battelleecology-quay-read-all-pull-secret"
    ],
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "location_loader",
          "glob": "/exofdom/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_YEAR",
          "repo": "data_source_exofdom_list_years",
          "glob": "/data_years.txt"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "resource_requests": {
    "memory": "200M",
    "cpu": 1
  },
  "parallelism_spec": {
    "constant": "8"
  }
}

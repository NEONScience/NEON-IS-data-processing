{
  "pipeline": {
    "name": "exodissolvedoxygen_calibration_conversion"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.cal.conv.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileSchmData=$FILE_SCHEMA_DATA",
      "FileSchmQf=$FILE_SCHEMA_FLAGS",
      "TermQf=dissolvedOxygenSaturation",
      "TermFuncUcrt=dissolved_oxygen:def.ucrt.wq.do.conc|dissolved_oxygen_saturation:def.ucrt.meas.mult"
      ],
    "image": "quay.io/battelleecology/neon-is-cal-conv-r:v0.0.43",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "exodissolvedoxygen_calibration_filter",
          "glob": "/exodissolvedoxygen/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_SCHEMA_DATA",
          "repo": "avro_schemas",
          "glob": "/dp0p/exodissolvedoxygen_calibrated.avsc"
        }
      },
      {
        "pfs": {
        "name": "FILE_SCHEMA_FLAGS",
        "repo": "avro_schemas",
        "glob": "/dp0p/flags_calibration_exodissolvedoxygen.avsc"
      }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

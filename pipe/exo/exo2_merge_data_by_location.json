{
  "pipeline": {
    "name": "exo2_merge_data_by_location"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.loc.data.trnc.comb.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "DirSubCombData=data|flags|uncertainty_data",
      "DirSubCopy=location|uncertainty_coef"
    ],
    "image": "quay.io/battelleecology/neon-is-loc-data-trnc-comb-r:v0.0.23",
    "image_pull_secrets": [
      "battelleecology-quay-read-all-pull-secret"
    ],
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "pfs": {
      "name": "DIR_IN",
      "repo": "exo2_structure_repo_by_location",
      "glob": "/exo2/*/*"
    }
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}
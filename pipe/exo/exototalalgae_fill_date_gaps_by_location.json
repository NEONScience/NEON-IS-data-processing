{
  "pipeline": {
    "name": "exototalalgae_fill_date_gaps_by_location"
  },
  "transform": {
    "cmd": [ "Rscript","/flow.loc.repo.gf.R","DirIn=$DIR_IN","DirOut=/pfs/out","FileSchmData=$FILE_SCHEMA_DATA","FileSchmQf=$FILE_SCHEMA_FLAGS"],
    "image": "quay.io/battelleecology/neon-is-loc-repo-gf-r:v0.0.6",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "exototalalgae_merge_data_by_location",
          "glob": "/exototalalgae/",
          "empty_files": true
        }
      },
      {
        "cross": [
        {
          "pfs": {
            "name": "FILE_SCHEMA_DATA",
            "repo": "avro_schemas",
            "glob": "/dp0/exototalalgae.avsc"
          }
        },
        {
          "pfs": {
            "name": "FILE_SCHEMA_FLAGS",
            "repo": "avro_schemas",
            "glob": "/dp0p/flags_calibration_exototalalgae.avsc"
          }
        }
        ]
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

{
  "pipeline": {
    "name": "exoturbidity_location_asset_assignment"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.loc.asgn.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileYear=$FILE_YEAR",
      "TypeFile=asset"
    ],
    "image": "quay.io/battelleecology/neon-is-loc-asgn-r:v0.0.2",
    "image_pull_secrets": [
      "battelleecology-quay-read-all-pull-secret"
    ],
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "cross":[
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "location_asset",
          "glob": "/exoturbidity/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_YEAR",
          "repo": "data_source_exoturbidity_list_years",
          "glob": "/data_years.txt"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "resource_requests": {
    "memory": "210M",
    "cpu": 0.3
  },
  "parallelism_spec": {
    "constant": "8"
  }
}
{
  "pipeline": {
    "name": "exophorp_calibration_conversion"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.cal.conv.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileSchmQf=$FILE_SCHEMA_FLAGS",
      "TermFuncUcrt=pH:def.ucrt.meas.mult",
      "TermQf=pH"
      ],
    "image": "quay.io/battelleecology/neon-is-cal-conv-r:v0.0.38",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "exophorp_calibration_filter",
          "glob": "/exophorp/*/*"
        }
      },
      {
        "pfs": {
        "name": "FILE_SCHEMA_FLAGS",
        "repo": "avro_schemas",
        "glob": "/dp0p/flags_calibration_exophorp.avsc"
      }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

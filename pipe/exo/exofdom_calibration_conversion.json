{
  "pipeline": {
    "name": "exofdom_calibration_conversion"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.cal.conv.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileSchmQf=$FILE_SCHEMA_FLAGS",
      "TermFuncUcrt=fDOM:def.ucrt.meas.cnst",
      "TermQf=fDOM",
      "DirSubCopy=calibration"
      ],
    "image": "quay.io/battelleecology/neon-is-cal-conv-r:v0.0.43",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "exofdom_calibration_filter",
          "glob": "/exofdom/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_SCHEMA_FLAGS",
          "repo": "avro_schemas",
          "glob": "/dp0p/flags_calibration_exofdom.avsc"
        }

      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

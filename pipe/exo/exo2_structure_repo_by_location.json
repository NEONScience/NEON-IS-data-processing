{
  "pipeline": {
    "name": "exo2_structure_repo_by_location"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.loc.repo.strc.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "Comb=TRUE"
    ],
    "image": "quay.io/battelleecology/neon-is-loc-repo-strc-r:v0.0.12",
    "image_pull_secrets": [
      "battelleecology-quay-read-all-pull-secret"
    ],
    "env": {
      "LOG_LEVEL": "INFO"
    }
  },
  "input": {
    "pfs": {
      "name": "DIR_IN",
      "repo": "exo2_location_filter",
      "glob": "/exo2/*/*"
    }
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}
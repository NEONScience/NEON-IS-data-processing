{
  "pipeline": {
    "name": "tempSoil_level1_group"
  },
  "transform": {
    "image_pull_secrets": [ "battelleecology-quay-read-all-pull-secret" ],
    "image": "quay.io/battelleecology/quality_metrics_statistics_group:1",
    "cmd": [ "/bin/bash" ],
    "stdin": [ "#!/bin/bash", "python3 -m quality_metrics_statistics_group.app" ],
    "env": {
      "LOG_LEVEL": "DEBUG",
      "OUT_PATH": "/pfs/out"
    }
  },
  "input": {
    "join": [
      {
        "pfs": {
          "name": "QUALITY_PATH",
          "repo": "tempSoil_quality_metrics",
          "glob": "/prt/*/*/(*)/(*)/quality_metrics",
          "joinOn": "$1/$2",
          "empty_files": true
        } 
      },
      {
        "pfs": {
          "name": "STATISTICS_PATH",
          "repo": "tempSoil_statistics",
          "glob": "/prt/*/*/(*)/(*)/stats",
          "joinOn": "$1/$2",
          "empty_files": true
        }
      }
    ]
  },
  "enable_stats": true,
  "standby": true
}

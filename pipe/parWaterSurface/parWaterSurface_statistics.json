{
  "pipeline": {
    "name": "parWaterSurface_statistics"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.stat.basc.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileSchmStat=$FILE_SCHEMA_STATS",
      "WndwAgr=001|005|030",
      "TermStat1=par:mean|minimum|maximum|variance|numPts|stdEr|expUncert(wrap.ucrt.dp01.cal.mult.fdas.volt)"
      ],
    "image": "quay.io/battelleecology/neon-is-stat-basc-r:v0.0.17",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "parWaterSurface_pre_statistics_group",
          "glob": "/pqs1/*/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_SCHEMA_STATS",
          "repo": "avro_schemas",
          "glob": "/dp01/parWaterSurface_dp01_stats.avsc"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "1"
  },
  "resource_requests": {
    "memory": "200Mi"
  }
}

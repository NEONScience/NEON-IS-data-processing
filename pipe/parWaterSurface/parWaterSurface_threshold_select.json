{
  "pipeline": {
    "name": "parWaterSurface_threshold_select"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.thsh.slct.R",
      "DirIn=$REPO_LOCATIONS",
      "DirOut=/pfs/out",
      "FileThsh=$FILE_THRESHOLDS",
      "TermCtxt1=par|par-surfacewater",
      "DirSubCopy=location"
      ],
    "image": "quay.io/battelleecology/neon-is-thsh-slct-r:v0.0.14",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "REPO_LOCATIONS",
          "repo": "parWaterSurface_locations",
          "glob": "/pqs1/*/*/*/"
        }
      },
      {
        "pfs": {
          "name": "FILE_THRESHOLDS",
          "repo": "parWaterSurface_threshold_filter",
          "glob": "/thresholds.json"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "1"
  },
  "resource_requests": {
    "memory": "200Mi"
  }
}

{
  "pipeline": {
    "name": "dualfan_merge_data_by_location"
  },
  "transform": {
    "cmd": ["Rscript","/flow.loc.data.trnc.comb.R","DirIn=$DIR_IN","DirOut=/pfs/out","DirSubCombData=data","DirSubCopy=location"],
    "image": "quay.io/battelleecology/neon-is-loc-data-trnc-comb-r:v0.0.7",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "DEBUG"
    }  
  },
  "input": {
      "pfs": {
        "name": "DIR_IN",
        "repo": "dualfan_structure_repo_by_location",
        "glob": "/dualfan/*/*/*/"
      }
  },
  "enable_stats": true,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

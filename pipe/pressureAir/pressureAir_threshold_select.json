{
  "pipeline": {
    "name": "pressureAir_threshold_select"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.thsh.slct.R",
      "DirIn=$REPO_LOCATIONS",
      "DirOut=/pfs/out",
      "DirErr=/pfs/out/errored_datums",
      "FileThsh=$FILE_THRESHOLDS",
      "TermCtxt1=barometricPressure|barometric-pressure",
      "DirSubCopy=location"
      ],
    "image": "quay.io/battelleecology/neon-is-thsh-slct-r:v0.0.17",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "REPO_LOCATIONS",
          "repo": "pressureAir_locations",
          "glob": "/ptb330a/*/*/*"
        }
      },
      {
        "pfs": {
          "name": "FILE_THRESHOLDS",
          "repo": "pressureAir_threshold_filter",
          "glob": "/thresholds.json"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "resource_requests": {
    "memory": "12M",
    "cpu": 0.05
  },
  "parallelism_spec": {
    "constant": 1
  }
}

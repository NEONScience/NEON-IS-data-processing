{
  "pipeline": {
    "name": "exo2_fill_date_gaps_by_location"
  },
  "transform": {
    "cmd": [ "Rscript","/flow.loc.repo.gf.R","DirIn=$DIR_IN","DirOut=/pfs/out","DirSubCopy=location","DirSubData=data|flags|uncertainty_data"],
    "image": "quay.io/battelleecology/neon-is-loc-repo-gf-r:v0.0.8",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "pfs": {
      "name": "DIR_IN",
      "repo": "exo2_merge_data_by_location",
      "glob": "/exo2/",
      "empty_files": false
    }
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

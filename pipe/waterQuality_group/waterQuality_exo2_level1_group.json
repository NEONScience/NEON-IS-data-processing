{
  "pipeline": {
    "name": "waterQuality_exo2_level1_group"
  },
  "transform": {
    "image_pull_secrets": [ "battelleecology-quay-read-all-pull-secret" ],
    "image": "quay.io/battelleecology/joiner:1",
    "cmd": [ "/bin/bash" ],
    "stdin": [ "#!/bin/bash", "python3 -m joiner.app" ],
    "env": {
      "RELATED_PATHS": "QUALITY_PATH,STATISTICS_PATH",
      "LOG_LEVEL": "INFO",
      "OUT_PATH": "/pfs/out"
    }
  },
  "input": {
    "join": [
      {
        "pfs": {
          "name": "QUALITY_PATH",
          "repo": "waterQuality_exo2_quality_metrics",
          "glob": "/*/*/(*)/(*)/exo2/*/quality_metrics",
          "joinOn": "$1/$2",
          "empty_files": true
        } 
      },
      {
        "pfs": {
          "name": "STATISTICS_PATH",
          "repo": "waterQuality_exo2_stats",
          "glob": "/*/*/(*)/(*)/exo2/*/stats",
          "joinOn": "$1/$2",
          "empty_files": true
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true
}

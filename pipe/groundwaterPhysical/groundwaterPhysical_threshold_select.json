{
  "pipeline": {
    "name": "groundwaterPhysical_threshold_select"
  },
  "transform": {
    "cmd": ["Rscript","/flow.thsh.slct.R","DirIn=$REPO_LOCATIONS","DirOut=/pfs/out","FileThsh=$FILE_THRESHOLDS","TermCtxt1=pressure|groundwater","TermCtxt2=temperature|groundwater","TermCtxt3=conductivity|groundwater","DirSubCopy=location"],
    "image": "quay.io/battelleecology/neon-is-thsh-slct-r:v0.0.13",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "REPO_LOCATIONS",
          "repo": "groundwaterPhysical_locations",
          "glob": "/*/*/*/*/"
        }
      },
      {
        "pfs": {
          "name": "FILE_THRESHOLDS",
          "repo": "groundwaterPhysical_threshold_filter",
          "glob": "/thresholds.json"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}
{
  "pipeline": {
    "name": "groundwaterPhysical_regularized_data"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.rglr.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "DirRglr=data",
      "FileSchmRglr=$FILE_SCHEMA_RGLR",
      "MethRglr=CybiEc",
      "WndwRglr=Trlg",
      "IdxWndw=IdxWndwMin"
      ],
    "image": "quay.io/battelleecology/neon-is-rglr-r:v0.0.28",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "DEBUG"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "groundwaterPhysical_calibrated_data",
          "glob": "/aquatroll200/*/*/*"
        }
      },
      {
        "pfs": {
        "name": "FILE_SCHEMA_RGLR",
        "repo": "avro_schemas",
        "branch": "master",
        "glob": "/dp0p/aquatroll200_calibrated_wo_source.avsc"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "1"
  },
  "resource_requests": {
      "memory": "20M",
      "cpu": 0.25
  }
}
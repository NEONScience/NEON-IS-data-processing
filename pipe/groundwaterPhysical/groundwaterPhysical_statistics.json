{
  "pipeline": {
    "name": "groundwaterPhysical_statistics"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.stat.basc.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileSchmStat=NA",
      "WndwAgr=030",
      "DirSubCopy=data|uncertainty_data",
      "TermStat1=pressure:mean|minimum|maximum|variance|numPts|stdEr",
      "TermStat2=temperature:mean|minimum|maximum|variance|numPts|stdEr",
      "TermStat3=conductivity:mean|minimum|maximum|variance|numPts|stdEr",
      "TermStat4=elevation:mean|minimum|maximum|variance|numPts|stdEr"
      ],
    "image": "quay.io/battelleecology/neon-is-stat-basc-r:v0.0.17",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
        "pfs": {
          "name": "DIR_IN",
          "repo": "groundwaterPhysical_ucrt_troll_specific",
          "glob": "/*/*/*/*"
        }
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "2"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}

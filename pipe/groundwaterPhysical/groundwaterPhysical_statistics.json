{
  "pipeline": {
    "name": "groundwaterPhysical_statistics"
  },
  "transform": {
    "cmd": [
      "Rscript",
      "/flow.stat.basc.R",
      "DirIn=$DIR_IN",
      "DirOut=/pfs/out",
      "FileSchmStat=$SCHEMA_STAT",
      "WndwAgr=030",
      "TermStat1=temperature:mean|minimum|maximum|variance|numPts|stdEr",
      "TermStat2=conductivity:mean|minimum|maximum|variance|numPts|stdEr"
      ],
    "image": "quay.io/battelleecology/neon-is-stat-basc-r:v0.0.19",
    "image_pull_secrets":["battelleecology-quay-read-all-pull-secret"],
    "env": {
      "LOG_LEVEL": "INFO"
    }  
  },
  "input": {
    "cross": [
      {
        "pfs": {
          "name": "DIR_IN",
          "repo": "groundwaterPhysical_qaqc_data_group",
          "glob": "/aquatroll200/*/*/*"
        }
      },
      {
        "pfs": {
          "name": "SCHEMA_STAT",
           "repo": "avro_schemas_groundwaterPhysical",
           "glob": "/dp01/groundwaterPhysical_dp01_stats.avsc"
        }
      }
    ]
  },
  "enable_stats": false,
  "standby": true,
  "parallelism_spec": {
    "constant": "1"
  },
  "resource_requests": {
    "memory": "200Mi",
    "cpu": 0
  }
}
